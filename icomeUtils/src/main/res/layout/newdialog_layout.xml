<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#37373B">

    <LinearLayout
        android:id="@+id/newdialog_layout"
        android:layout_width="@dimen/x540"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/newdialog_shape"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x150"
            android:layout_margin="@dimen/x30"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/newdialog_edit_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="是否保存？"
                android:textColor="#000000"
                android:textSize="@dimen/x30"
                />

            <TextView
                android:id="@+id/newdialog_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x24"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="@dimen/x28"
                android:visibility="gone"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#9f9f9f"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x100"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/newdialog_web_escs"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="否"
                android:textColor="#585858"
                android:textSize="@dimen/x34"
                />

            <View
                android:id="@+id/newdialog_divide_line"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#9f9f9f"
                />

            <TextView
                android:id="@+id/newdialog_web_enter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="是"
                android:textColor="#007aff"
                android:textSize="@dimen/x34"
                />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/newreviewts_image"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <TextView
        android:visibility="gone"
        android:id="@+id/jumpOver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/x64"
        android:layout_marginRight="@dimen/x30"
        android:textSize="@dimen/x32"
        android:textColor="#ffffff"
        android:text="跳过 >>"/>
</RelativeLayout>