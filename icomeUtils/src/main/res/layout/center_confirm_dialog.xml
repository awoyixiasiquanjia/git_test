<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/newdialog_layout"
        android:layout_width="@dimen/x540"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/newdialog_shape"
        android:orientation="vertical">

        <TextView
            android:id="@+id/center_c_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:text="名称"
            android:textColor="@color/zt_333"
            android:textSize="@dimen/x30" />

        <RelativeLayout
            android:id="@+id/item_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_marginLeft="20dp">

            <ImageView
                android:id="@+id/center_content_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ysf_message_file_icon_jpg"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"/>


            <TextView
                android:id="@+id/center_content_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:text="名称"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/center_content_icon"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#333333"
                android:textSize="15sp" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#9f9f9f" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x100"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/newdialog_web_escs"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/zt_333"
                android:textSize="@dimen/x34" />

            <View
                android:id="@+id/newdialog_divide_line"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#9f9f9f" />

            <TextView
                android:id="@+id/newdialog_web_enter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确认"
                android:textColor="#007aff"
                android:textSize="@dimen/x34" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>