<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="@dimen/x540"
        android:layout_height="@dimen/x280"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/dialog_shape">

        <TextView
            android:id="@+id/dialog_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x55"
            android:gravity="center"
            android:text="你关注的内容已标记"
            android:textColor="#000000"
            android:textSize="@dimen/x28" />

        <TextView
            android:layout_below="@id/dialog_tv1"
            android:id="@+id/dialog_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x10"
            android:gravity="center"
            android:text="在【收藏】能看到所有收藏内容"
            android:textColor="#000000"
            android:textSize="@dimen/x28" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x88"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#9f9f9f" />

            <TextView
                android:id="@+id/tv_zhidao"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="我知道了"
                android:textColor="#007AFF"
                android:textSize="@dimen/x32" />

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>