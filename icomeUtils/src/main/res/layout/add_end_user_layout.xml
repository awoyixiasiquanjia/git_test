<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="@dimen/x540"
        android:layout_height="@dimen/x280"
        android:background="@drawable/dialog_commit"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        >
        <TextView
            android:id="@+id/dialog_tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确定将决策人加入到群聊中吗？"
            android:gravity="center"
            android:layout_marginTop="@dimen/x70"
            android:layout_marginLeft="@dimen/x26"
            android:layout_marginRight="@dimen/x26"
            android:textColor="#000000"
            android:textSize="@dimen/x30"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x88"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#9f9f9f"
                ></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/pass_cancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="取消"
                    android:gravity="center"
                    android:textColor="#585858"
                    android:textSize="@dimen/x34"

                    ></TextView>
                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#9f9f9f"

                    ></View>
                <TextView
                    android:id="@+id/pass_confirm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="确定"
                    android:textSize="@dimen/x34"
                    android:textColor="#007aff"
                    android:gravity="center"
                    ></TextView>


            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>