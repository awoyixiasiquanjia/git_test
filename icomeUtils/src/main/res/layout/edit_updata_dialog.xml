<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/newdialog_layout"
        android:layout_width="@dimen/x540"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/newdialog_shape"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x30"
            android:gravity="center"
            android:text="修改创值里程碑名称"
            android:textColor="@color/zt_333"
            android:textSize="@dimen/x30" />

        <EditText
            android:id="@+id/ed_updata_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x30"
            android:background="@null"
            android:hint="请填写创值里程碑名称"
            android:maxLines="3"
            android:maxLength="30"
            android:minLines="3"
            android:textSize="@dimen/x30" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#9f9f9f" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x100"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/newdialog_web_escs"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="#007aff"
                android:textSize="@dimen/x34" />

            <View
                android:id="@+id/newdialog_divide_line"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#9f9f9f" />

            <TextView
                android:id="@+id/newdialog_web_enter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确认"
                android:textColor="#007aff"
                android:textSize="@dimen/x34" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>