<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="@dimen/x540"
        android:layout_height="@dimen/x280"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/dialog_shape">

        <TextView
            android:id="@+id/dialog_tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x70"
            android:gravity="center"
            android:text="请下载文件后打开"
            android:textColor="#000000"
            android:textSize="@dimen/x30" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x88"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#9f9f9f" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dialog_esc2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="#585858"
                    android:textSize="@dimen/x34" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#9f9f9f" />

                <TextView
                    android:id="@+id/dialog_enter1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="确定"
                    android:textColor="#007aff"
                    android:textSize="@dimen/x34"></TextView>


            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>